@using OgrenciNotMvc.Models.EntityFramework
@model List<Tbl_Dersler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>DersId</th>
        <th>DersAd</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach(var ders in Model)
        {
            <tr>
                <td>@ders.Ders_Id</td>
                <td>@ders.Ders_Ad</td>
                <td>
                    <a href="/Dersler/DersSil/@ders.Ders_Id" class="btn btn-danger">Sil</a>
                    <a href="/Dersler/DersGuncelle/@ders.Ders_Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Dersler/DersEkle" class="btn btn-primary">Yeni Ders Kayıt</a>

