@model OgrenciNotMvc.Models.EntityFramework.Tbl_Ogrenci
@{
    ViewBag.Title = "OgrenciGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ogrenci Guncelleme Sayfası</h2>
<br />
<form method="post" action="/Ogrenci/OgrenciGuncelle">
    <div class="form-group">
        <input class="hidden" type="text" name="Ogrenci_Id" value="@Model.Ogrenci_Id"/>
    </div>
    <div class="form-group">
        <label for="ogrenciad">Ögrenci Ad</label>
        <input class="form-control" type="text" name="Ogrenci_Ad" value="@Model.Ogrenci_Ad" />
    </div>
    <div class="form-group">
        <label for="ogrencisoyad">Ögrenci Soyad</label>
        <input class="form-control" type="text" name="Ogrenci_Soyad" value="@Model.Ogrenci_Soyad" />
    </div>
    <div class="form-group">
        <label for="ogrencifotograf">Ögrenci Fotoğraf</label>
        <input class="form-control" type="text" name="Ogrenci_Fotograf" value="@Model.Ogrenci_Fotograf" />
    </div>
    <div class="form-group">
        <label for="ogrencicinsiyet">Öğrenci Cinsiyet</label>
        @*
        @Html.DropDownList(
           "Ogrenci_Cinsiyet",
           new[]
           {
               new SelectListItem(){ Value = "0" ,  Text = "Kadın"},
               new SelectListItem(){ Value = "1" ,  Text = "Erkek"}
           },
           "Cinsiyet Seçiniz",
           new{ @class = "form-control"}
        )
        *@
        @Html.DropDownListFor(m => m.Ogrenci_Cinsiyet, (List<SelectListItem>)ViewBag.cnsyt, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ogrenciad">Ogrenci Kulup</label>
        @Html.DropDownListFor(m => m.Tbl_Kulupler.Kulup_Id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <button class="btn btn-default" type="submit">Güncelle</button>
</form>